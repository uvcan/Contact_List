<html>
    <head>
        <title>
            <%=locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/53fa78d0b5.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
           My Contacts List
        </h1>
        <div class="contact-list-container">
            <ul>
                <% for(let i of contact_list){ %>
                    <li class="contact">
                        <div class="details">
                            <p><%=i.name%></p>
                            <p><%=i.phone%></p>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-contact/?phone=<%=i.phone%>">
                                <i class="fas fa-close"></i>
                            </a>
                        </div>
                    </li>
                <%} %>
            </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enater Contact" required>
            <input type="submit" placeholder="Add">
        </form>

    </body>
    <script type="text/javascript" src="/js/home.js"></script>
</html>